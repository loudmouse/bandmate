<div id="banner" class="podcasts_banner">
  <h1>Creat something today.</h1>
</div>

<div id="podcasts" class="cf">
  <div class="wrapper">
    <ul class="cf">
      <% @podcasts.each do |podcast| %>
        <%= link_to podcast do %>
          <li>
            <%= image_tag podcast.thumbnail.url(:medium) %>
            <div class="podcast_overview">
              <h2 class="title"><%= podcast.title %></h2>
              <p class="episode_count">1 Episode</p>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>

    <%= will_paginate @podcasts, previous_label: "Back", next_label: "May I have some more, please?" %>
  </div>
</div>
